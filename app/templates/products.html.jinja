{% extends "layout.html.jinja" %}

{% block middle %}
    <h2>Produkty</h2>
        
    <ul class="list-group">
        {% for product in products %}
        
            <li class="list-group-item">
            <a href="{{ url_for('product', productId=product[0]) }}">{{product[0]}}</a>
            <a> | Opinie: {{product[1]}} |</a>
            <a> Wady: {{product[2]}} |</a>
            <a> Zalety: {{product[3]}} |</a>
            <a> Åšrednia ocena: {{product[4]}} |</a>
            <div class="btn-group" role="group" style="float: right;">
                <button type="button" class="btn btn-primary" onclick="javascript:location.href='/getJSON/{{product[0]}}'">JSON</button>
                <button type="button" class="btn btn-primary" onclick="javascript:location.href='/getXML/{{product[0]}}'">XML</button>
                <button type="button" class="btn btn-primary" onclick="javascript:location.href='/getCSV/{{product[0]}}'">CSV</button>
            </div>
            </li>
        {% endfor %}
    </ul>
{% endblock middle %}